<div id="box">
  <div class="block" id="block-signup">
    <h2>Web App</h2>
    <div class="content login">
      <%= form_for(Employee.new, :url => employee_session_path, :method => :post, :html => {:class => "form"}) do |f| %>
          
          <div class="group">
            <%= f.label :email, :class => "label" %>
            <%= f.email_field :email, :required => false, :autofocus => true, :class => "text_field" %>
            <span class="description">E-mail</span>
          </div>
          <div class="group">
            <%= f.label :password, :class => "label" %>
            <%= f.password_field :password, :required => false, :class => "text_field" %>
            <span class="description">密碼</span>
          </div>
          
          <div class="navform wat-cf">
            <button class="button" type="submit">
              <%= image_tag("web-app-theme/icons/key.png", :alt => "#{t("web-app-theme.login", :default => "login")}") %>
              <%= t("web-app-theme.login", :default => "Login") %>
            </button>
          </div>
      <% end %>
    </div>
  </div>
</div>