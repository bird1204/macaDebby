<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_employees_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_employee_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_employee_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_employee.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @employee.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.mobile", :default => t("activerecord.labels.mobile", :default => "Mobile")) %>:</b>
          <%= @employee.mobile %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.address", :default => t("activerecord.labels.address", :default => "Address")) %>:</b>
          <%= @employee.address %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.role", :default => t("activerecord.labels.role", :default => "role")) %>:</b>
          <%= @employee.role %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.enabled", :default => t("activerecord.labels.enabled", :default => "Enabled")) %>:</b>
          <%= @employee.enabled %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.email", :default => t("activerecord.labels.email", :default => "Email")) %>:</b>
          <%= @employee.email %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.encrypted_password", :default => t("activerecord.labels.encrypted_password", :default => "Encrypted password")) %>:</b>
          <%= @employee.encrypted_password %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.reset_password_token", :default => t("activerecord.labels.reset_password_token", :default => "Reset password token")) %>:</b>
          <%= @employee.reset_password_token %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.reset_password_sent_at", :default => t("activerecord.labels.reset_password_sent_at", :default => "Reset password sent at")) %>:</b>
          <%= @employee.reset_password_sent_at %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.remember_created_at", :default => t("activerecord.labels.remember_created_at", :default => "Remember created at")) %>:</b>
          <%= @employee.remember_created_at %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.sign_in_count", :default => t("activerecord.labels.sign_in_count", :default => "Sign in count")) %>:</b>
          <%= @employee.sign_in_count %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.current_sign_in_at", :default => t("activerecord.labels.current_sign_in_at", :default => "Current sign in at")) %>:</b>
          <%= @employee.current_sign_in_at.to_s(:db) %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.last_sign_in_at", :default => t("activerecord.labels.last_sign_in_at", :default => "Last sign in at")) %>:</b>
          <%= @employee.last_sign_in_at.to_s(:db) %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.current_sign_in_ip", :default => t("activerecord.labels.current_sign_in_ip", :default => "Current sign in ip")) %>:</b>
          <%= @employee.current_sign_in_ip %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_employee.last_sign_in_ip", :default => t("activerecord.labels.last_sign_in_ip", :default => "Last sign in ip")) %>:</b>
          <%= @employee.last_sign_in_ip %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_employee_path(@employee), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_employee_path(@employee), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>