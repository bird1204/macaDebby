<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_customers_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_customer_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_customer_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_customer.permission_id", :default => t("activerecord.labels.permission_id", :default => "Permission")) %>:</b>
          <%= @customer.permission_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @customer.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.mobile", :default => t("activerecord.labels.mobile", :default => "Mobile")) %>:</b>
          <%= @customer.mobile %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.address", :default => t("activerecord.labels.address", :default => "Address")) %>:</b>
          <%= @customer.address %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.is_member", :default => t("activerecord.labels.is_member", :default => "Is member")) %>:</b>
          <%= @customer.is_member %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.email", :default => t("activerecord.labels.email", :default => "Email")) %>:</b>
          <%= @customer.email %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.encrypted_password", :default => t("activerecord.labels.encrypted_password", :default => "Encrypted password")) %>:</b>
          <%= @customer.encrypted_password %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.reset_password_token", :default => t("activerecord.labels.reset_password_token", :default => "Reset password token")) %>:</b>
          <%= @customer.reset_password_token %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.reset_password_sent_at", :default => t("activerecord.labels.reset_password_sent_at", :default => "Reset password sent at")) %>:</b>
          <%= @customer.reset_password_sent_at %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.remember_created_at", :default => t("activerecord.labels.remember_created_at", :default => "Remember created at")) %>:</b>
          <%= @customer.remember_created_at %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.sign_in_count", :default => t("activerecord.labels.sign_in_count", :default => "Sign in count")) %>:</b>
          <%= @customer.sign_in_count %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.current_sign_in_at", :default => t("activerecord.labels.current_sign_in_at", :default => "Current sign in at")) %>:</b>
          <%= @customer.current_sign_in_at %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.last_sign_in_at", :default => t("activerecord.labels.last_sign_in_at", :default => "Last sign in at")) %>:</b>
          <%= @customer.last_sign_in_at %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.current_sign_in_ip", :default => t("activerecord.labels.current_sign_in_ip", :default => "Current sign in ip")) %>:</b>
          <%= @customer.current_sign_in_ip %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_customer.last_sign_in_ip", :default => t("activerecord.labels.last_sign_in_ip", :default => "Last sign in ip")) %>:</b>
          <%= @customer.last_sign_in_ip %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_customer_path(@customer), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_customer_path(@customer), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>