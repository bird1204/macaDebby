<%= render :partial => "/layouts/navBar", :locals => { :tab => "order" } %>


<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="row">
        <%@orders.each do |order|%>
        <div class="col-md-4">
          <div class="thumbnail">
            <%=image_tag order.product.product_images.first.url%>
            <div class="caption">
              <h3>
                <%=order.product.name%>
              </h3>
              <p>・收件者：<%=order.delivery_name%></p>
              <p>・收件地址：<%=order.delivery_address%></p>
              <p>・收件方式：<%=order.delivery_method%></p>
              <p>・訂單狀態：<%=order.status%></p>
              <p>・數量：<%=order.quantity%></p>
              <p>・折扣：<%=order.product.discount%>折</p>
              <p>・總價：<%=order.sum_price%></p>
              
              <p>
                <%=link_to "詳細資訊", edit_order_path(order.id), :class => "btn btn-primary"%>
                <%if order.status != 9%>
                  <%=link_to "取消訂單", order_path(order.id), :method => :DELETE %>
                <%else%>
                  <font color="red">取消訂單中</font>
                <%end%>
              </p>
            </div>
          </div>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>